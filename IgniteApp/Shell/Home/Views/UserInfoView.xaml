<UserControl
    x:Class="IgniteApp.Shell.Home.Views.UserInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:IT.Tangdao.Xaml.Attached;assembly=IT.Tangdao.Xaml"
    xmlns:conver="clr-namespace:IgniteApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:daoMarkup="clr-namespace:IT.Tangdao.Framework.Markup;assembly=IT.Tangdao.Framework"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:IgniteApp.Shell.Home.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:text="clr-namespace:IgniteApp.Converters.Test"
    xmlns:vm="clr-namespace:IgniteApp.Shell.Home.ViewModels"
    x:Name="UserView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <text:BindingProxy x:Key="proxy" Data="{Binding}" />
        <conver:IdConverter x:Key="id" />

        <!--  1. 定义 ListViewItemBaseStyle  -->
        <Style x:Key="ListViewItemBaseStyle" TargetType="ListViewItem">
            <Setter Property="Height" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Padding="4" Background="{TemplateBinding Background}">
                            <!--  关键点：用 GridViewRowPresenter 替换 ContentPresenter  -->
                            <GridViewRowPresenter Columns="{Binding View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}" Content="{TemplateBinding Content}" />
                        </Border>
                        <!--  定义触发器  -->
                        <ControlTemplate.Triggers>
                            <!--  鼠标悬停效果  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0" />
                                <!--  浅灰色  -->
                            </Trigger>
                            <!--  选中效果  -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD0D0D0" />
                                <!--  深灰色  -->
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  定义列标题样式  -->
        <Style x:Key="GridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Height" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <!--  悬停/按下效果  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD0D0D0" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA0A0A0" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  2. 定义 ScrollBarBaseStyle  -->
        <Style x:Key="ScrollBarBaseStyle" TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  3. 定义 UserInfoEntryStyle  -->
        <Style x:Key="UserInfoEntryStyle" TargetType="ListView">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ListViewItemBaseStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ScrollViewer Focusable="False">
                                <StackPanel>
                                    <!--  标题行  -->
                                    <GridViewHeaderRowPresenter ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}" Columns="{Binding View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                    <!--  2. 数据行  -->
                                    <ItemsPresenter />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListView
                IsEnabled="{Binding IsEnabled}"
                ItemsSource="{Binding LoginInfos}"
                Style="{DynamicResource UserInfoEntryStyle}">

                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding ., Converter={StaticResource id}}" Header="Id" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=UserName}" Header="用户名" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Password}" Header="密码" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=IsAdmin}" Header="是否管理员" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=IP}" Header="登录IP" />
                    </GridView>
                </ListView.View>
            </ListView>

            <DataGrid
                x:Name="dataGrid"
                Grid.Column="1"
                AutoGenerateColumns="False"
                ItemsSource="{Binding FakeLoginInfos}"
                SelectionMode="Single"
                SelectionUnit="Cell">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding UserName}" Header="UserName" />
                    <DataGridTextColumn Binding="{Binding Password}" Header="Password" />
                    <DataGridTextColumn Binding="{Binding IsAdmin}" Header="IsAdmin" />

                    <DataGridTemplateColumn Header="IP">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{Binding Path=DataContext.TextColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" Text="{Binding IP}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                        <!--  双击后临时变成 TextBox，失焦即提交  -->
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding IP, UpdateSourceTrigger=LostFocus}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="电话">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{daoMarkup:RelativeBinding Path=DataContext.TextColor, AncestorTypeName=DataGrid}" Text="{Binding UserName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal">

            <!--<hc:PasswordBox
                x:Name="pass"
                Width="100"
                Margin="5" IsSafeEnabled="False"
                hc:UnsafePassword="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />-->
            <PasswordBox
                x:Name="pass"
                Width="100"
                Height="30"
                Margin="5"
                attach:PasswordBoxAttach.Attach="True"
                attach:PasswordBoxAttach.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                attach:PasswordBoxAttach.RevealButton="False" />
            <Button
                Width="80"
                Margin="5"
                Command="{Binding UnlockCommand}"
                CommandParameter="{Binding ElementName=pass, Path=(attach:PasswordBoxAttach.Password)}"
                Content="解锁" />
            <Button
                Width="180"
                Margin="5"
                Command="{Binding GetIlistCellInfoCommand}"
                CommandParameter="{Binding ElementName=dataGrid, Path=SelectedCells}"
                Content="获取选定单元格列表信息" />
            <Button
                Width="180"
                Margin="5"
                Command="{Binding GetCellInfoCommand}"
                CommandParameter="{Binding ElementName=dataGrid, Path=CurrentCell}"
                Content="获取具有焦点单元格信息" />
        </StackPanel>
    </Grid>
</UserControl>