            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2">
            <Button Width="100" Height="30" Command="{s:Action Search}" CommandParameter="{Binding Path=SelectedItem,ElementName=com}" />
        </StackPanel>
    </Grid>
</UserControl>