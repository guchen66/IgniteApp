<UserControl
    x:Class="IgniteApp.Shell.Monitor.Views.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IgniteApp.Shell.Monitor.Views"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:s="https://github.com/canton7/Stylet"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Width="200" Margin="10">
            <!-- 搜索框 -->
            <TextBox x:Name="SearchTextBox"
                 Text="{Binding SearchContent, UpdateSourceTrigger=PropertyChanged}"
                 GotFocus="{s:Action TextBoxGotFocus}"
                 LostFocus="{s:Action TextBoxLostFocus}" />

            <!-- 搜索历史弹出框 -->
            <Popup IsOpen="{Binding ShowHistoryPopup}"
               PlacementTarget="{Binding ElementName=SearchTextBox}"
               Placement="Bottom"
               StaysOpen="False">
                <Border Background="#FFF0F0F0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    MaxHeight="200"
                    Width="{Binding Path=ActualWidth, ElementName=SearchTextBox}">
                    <ListBox ItemsSource="{Binding SearchHistory}"
                     SelectedItem="{Binding SearchContent}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">

                                <i:InvokeCommandAction Command="{Binding SelectHistoryItemCommand}"
                                       CommandParameter="{Binding SelectedItem}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>
                </Border>
            </Popup>

            <!-- 搜索按钮 -->
            <Button Content="搜索"
                Command="{s:Action ExecuteSearch}"
                Margin="0,5,0,0" />
        </StackPanel>
        <Button
            Grid.Column="1"
            Width="200"
            Height="30"
            Command="{s:Action GetStaticticInfo}" />
    </Grid>
</UserControl>