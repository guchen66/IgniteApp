                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Command="{s:Action AutoTriggerAlarm}" Content="触发报警" />
                    <Button Command="{s:Action AutoTriggerAlarm2}" Content="触发报警" />
                    <Button Command="{s:Action AutoTriggerAlarm3}" Content="触发报警" />
                    <Button Command="{s:Action SolvedAlarm}" Content="清除报警" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="模拟数据">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBox Width="200" Text="{Binding ReceiveData}" />
                <Button
                    Grid.Row="1"
                    Command="{s:Action GetData}"
                    Content="获取数据" />
            </Grid>
        </TabItem>
        <TabItem Header="模拟数据">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image
                    Width="50"
                    Height="50"
                    Source="{Binding Image}">
                    <Image.Clip>
                        <EllipseGeometry
                            Center="25,25"
                            RadiusX="25"
                            RadiusY="25" />
                    </Image.Clip>
                </Image>
                <Button Grid.Row="1" Content="导出" Command="{s:Action Export}" />
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>