<UserControl
    x:Class="IgniteApp.Shell.Maintion.Views.ElectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IgniteApp.Shell.Maintion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="多事件判断电流">
                <StackPanel>
                    <Grid
                        Width="200"
                        Height="30"
                        Margin="5">
                        <TextBox
                            x:Name="CurrentTextBox"
                            Width="200"
                            Height="30"
                            Text="{Binding Electricity.ElectyicValue, UpdateSourceTrigger=PropertyChanged}" />

                        <Popup
                            IsOpen="{Binding IsStatusPopupVisible}"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=CurrentTextBox}"
                            StaysOpen="False">
                            <Border
                                Padding="5"
                                Background="#FFF0F0F0"
                                BorderBrush="Red"
                                BorderThickness="1">
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding StatusMessage, TargetNullValue='0'}" />
                            </Border>
                        </Popup>
                    </Grid>

                    <Button
                        Width="200"
                        Height="30"
                        Margin="5,30,0,0"
                        Command="{Binding CheckCommand}"
                        Content="检测" />
                </StackPanel>
            </TabItem>
            <TabItem Header="单事件判断状态">
                <StackPanel>
                    <TextBox
                        Width="200"
                        Height="30"
                        Text="{Binding ElectStatus.ElectPrice, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="{Binding ElectStatus.Status}" />
                    <Button
                        Width="200"
                        Height="30"
                        Margin="5,30,0,0"
                        Command="{Binding CheckPriceCommand}"
                        Content="检测" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>