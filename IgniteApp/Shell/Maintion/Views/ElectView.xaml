<UserControl
    x:Class="IgniteApp.Shell.Maintion.Views.ElectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conver="clr-namespace:IgniteApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IgniteApp.Shell.Maintion.Views"
    xmlns:marup="clr-namespace:IT.Tangdao.Framework.Markup;assembly=IT.Tangdao.Framework"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:textStatus="clr-namespace:IgniteShared.Globals.Common;assembly=IgniteShared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conver:SingleStateToBoolConverter x:Key="SingleStateToBoolConverter" />
        <conver:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StatusBar VerticalAlignment="Top" Style="{StaticResource CustomStatusBarStyle}">
            <StatusBarItem>
                <TextBlock Text="{marup:BoolToStringMode Binding={Binding BoolValue}, FalseValue='{x:Static textStatus:TextStatus.Falied}', TrueValue='{x:Static textStatus:TextStatus.Sucess}'}" />
            </StatusBarItem>
            <Separator />
        </StatusBar>
        <DataGrid
            Name="dataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding ELectModelList}"
            RowDetailsVisibilityMode="Collapsed"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.RowStyle>
                <Style BasedOn="{StaticResource DataGridRowStyle}" TargetType="DataGridRow">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding Name}" Header="电流表名称" />
                <DataGridTextColumn Binding="{Binding CurrentValue}" Header="当前电流" />
                <DataGridTextColumn Binding="{Binding Range}" Header="最大量程" />
                <DataGridTextColumn Binding="{Binding Status, Converter={StaticResource SingleStateToBoolConverter}}" Header="状态" />
                <DataGridTemplateColumn Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Command="{s:Action StartMonitor}"
                                    CommandParameter="{Binding}"
                                    Content="开启监控"
                                    IsEnabled="{Binding IsSelected}" />
                                <Button
                                    Width="100"
                                    Command="{s:Action StopMonitor}"
                                    CommandParameter="{Binding}"
                                    Content="停止监控"
                                    IsEnabled="{Binding IsSelected}" />
                                <Button
                                    Width="100"
                                    Command="{s:Action EditValue}"
                                    CommandParameter="{Binding}"
                                    Content="测试"
                                    IsEnabled="{Binding IsSelected}" />
                                <Button
                                    Width="100"
                                    Command="{s:Action EditValue2}"
                                    CommandParameter="{Binding}"
                                    Content="测试2"
                                    IsEnabled="{Binding IsSelected}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Grid.Row="2">
            <TabItem Header="多事件判断电流">
                <StackPanel>
                    <Grid
                        Width="200"
                        Height="30"
                        Margin="5">
                        <TextBox
                            x:Name="CurrentTextBox"
                            Width="200"
                            Height="30"
                            Text="{Binding Electricity.ElectyicValue, UpdateSourceTrigger=PropertyChanged}" />

                        <Popup
                            IsOpen="{Binding IsStatusPopupVisible}"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=CurrentTextBox}"
                            StaysOpen="False">
                            <Border
                                Padding="5"
                                Background="#FFF0F0F0"
                                BorderBrush="Red"
                                BorderThickness="1">
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding StatusMessage, TargetNullValue='0'}" />
                            </Border>
                        </Popup>
                    </Grid>

                    <Button
                        Width="200"
                        Height="30"
                        Margin="5,30,0,0"
                        Command="{Binding CheckCommand}"
                        Content="检测" />
                </StackPanel>
            </TabItem>
            <TabItem Header="单事件判断状态">
                <StackPanel>
                    <TextBox
                        Width="200"
                        Height="30"
                        Text="{Binding ElectStatus.ElectPrice, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="{Binding ElectStatus.Status}" />
                    <Button
                        Width="200"
                        Height="30"
                        Margin="5,30,0,0"
                        Command="{Binding CheckPriceCommand}"
                        Content="检测" />
                </StackPanel>
            </TabItem>
            <TabItem DataContext="{Binding UsualArgs}" Header="绑定数组">
                <StackPanel Width="200">
                    <TextBox Margin="5" Text="{Binding DoubleValue[0], FallbackValue='0'}" />
                    <TextBox Margin="5" Text="{Binding DoubleValue[1]}" />
                    <TextBox Margin="5" Text="{Binding DoubleValue[2]}" />
                    <TextBox Margin="5" Text="{Binding DoubleValue[3]}" />
                    <TextBox Margin="5" Text="{Binding DoubleValue[4]}" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>