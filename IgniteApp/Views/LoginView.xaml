<Window
    x:Class="IgniteApp.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:IgniteApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:shared="clr-namespace:IgniteShared.Entitys.Common;assembly=IgniteShared"
    xmlns:conver="clr-namespace:IT.Tangdao.Framework.DaoConverters;assembly=IT.Tangdao.Framework"
    x:Name="LoginWin"
    Title="LoginView"
    Width="600"
    Height="380"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Assets/Styles/LoginBackgroundStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="Transparent" MouseLeftButtonDown="{s:Action DragMove}">
        <DockPanel LastChildFill="False">
            <StackPanel
                Width="260"
                Height="380"
                DockPanel.Dock="Left">
                <Image
                    Margin="20,60,0,0"
                    Source="{StaticResource dotNetSource}"
                    Stretch="Fill" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    Margin="20,-120,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Text="系统登录" />
                <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                    <hc:TextBox
                        x:Name="txtUsername"
                        Width="250"
                        Margin="10,0"
                        hc:InfoElement.Placeholder="请输入账号"
                        CaretBrush="{StaticResource PeonyBrush}"
                        FontSize="16"
                        SelectionBrush="{StaticResource PeonyBrush}"
                        Text="{Binding LoginDto.UserName}" />
                </StackPanel>
                <StackPanel Margin="20,10,0,0" Orientation="Horizontal">
                    <hc:PasswordBox
                        x:Name="txtPassword"
                        Width="250"
                        Margin="10,0"
                        hc:InfoElement.Placeholder="请输入密码"
                        hc:UnsafePassword="{Binding LoginDto.Password,UpdateSourceTrigger=PropertyChanged}"
                        CaretBrush="{StaticResource PeonyBrush}"
                        FontSize="16"
                        IsSafeEnabled="False"
                        SelectionBrush="{StaticResource PeonyBrush}"
                        ShowEyeButton="True" />
                </StackPanel>

                <StackPanel Margin="20,15,0,0" Orientation="Horizontal">
                    <CheckBox
                        Margin="10,15,0,0"
                        Command="{s:Action ExecuteRememberPwd}"
                        Content="记住密码"
                        FontSize="16"
                        IsChecked="{Binding Path=LoginDto.IsRemember, Mode=TwoWay}" />
                    <TextBlock
                        Margin="100,15,0,0"
                        FontSize="16"
                        Text="忘记密码">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding RegisterCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="30"
                        Margin="40,20,20,-100"
                        HorizontalAlignment="Center"
                        Background="{StaticResource OceanBlueBrush}"
                        Command="{s:Action ExecuteLogin}"
                        Content="登录"
                        IsDefault="True" />
                    <Button
                        Width="100"
                        Height="30"
                        Margin="20,20,20,-100"
                        HorizontalAlignment="Center"
                        Background="{StaticResource OceanBlueBrush}"
                        Command="{s:Action ExecuteCancel}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                        Content="取消"
                        IsCancel="True" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>