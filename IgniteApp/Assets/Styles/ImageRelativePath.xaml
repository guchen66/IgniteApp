<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--<ImageSource x:Key="imagePath">../Assets/Images/dotNet.jpg</ImageSource>-->

    <!--  正确写法1：完整pack URI  -->
    <BitmapImage x:Key="dotNetSource" UriSource="pack://application:,,,/IgniteApp;component/Assets/Images/dotNet.jpg" />
    <BitmapImage x:Key="UserSource" UriSource="pack://application:,,,/IgniteApp;component/Assets/Images/user.jpg" />
    <BitmapImage x:Key="_404Source" UriSource="pack://application:,,,/IgniteApp;component/Assets/Images/404.png" />
    <BitmapImage x:Key="LightSource" UriSource="pack://application:,,,/IgniteApp;component/Assets/Images/Light.png" />
    <!--  正确写法2：简化路径（需确认程序集名称）  -->
    <BitmapImage x:Key="imageSource2" UriSource="/Assets/Images/dotNet.jpg" />

    <!--  轮播图测试图片  -->
    <BitmapImage x:Key="Zero" UriSource="/Assets/Images/0.png" />
    <BitmapImage x:Key="One" UriSource="/Assets/Images/1.png" />
    <BitmapImage x:Key="Two" UriSource="/Assets/Images/2.png" />
    <BitmapImage x:Key="Three" UriSource="/Assets/Images/3.png" />
</ResourceDictionary>