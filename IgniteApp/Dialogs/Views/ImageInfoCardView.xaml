<Window
    x:Class="IgniteApp.Dialogs.Views.ImageInfoCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IgniteApp.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    Width="500" Height="350"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border Width="500" Height="350">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="图片大小：" />
                    <TextBox
                        Width="200"
                        Height="30"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="{Binding FileSize}" />
                </StackPanel>
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="文件地址：" />
                    <TextBox
                        Width="200"
                        Height="30"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="{Binding FilePath}" />
                </StackPanel>

                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="文件名称：" />
                    <TextBox
                        Width="200"
                        Height="30"
                        VerticalAlignment="Center"
                        FontSize="16"
                        IsReadOnly="True"
                        Text="{Binding FileName}" />
                </StackPanel>
                <!--<StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBlock
                      Width="80"
                      VerticalAlignment="Center"
                      FontSize="20"
                      Text="创建日期：" />
                    <cvt:MyDateTimePicker
                      Width="220"
                      Height="30"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="16"
                      SelectedDateTime="{Binding DateValue, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>-->
            </StackPanel>

            <Grid Grid.Row="1" Margin="20">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="35"
                        Margin="10"
                        Padding="0,0,0,3"
                        Background="#71c4ef"
                        Command="{s:Action ExecuteBack}"
                        CommandParameter="true"
                        Content="返回"
                        FontSize="20" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>